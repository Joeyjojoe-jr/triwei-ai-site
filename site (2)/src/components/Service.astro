---
import { getEntry } from "../lib/getDaily";
const entry = getEntry();
const body = entry?.body || "";
const match = body.match(/##\s*Service[^\n]*\n([\s\S]*)/);
const serviceBlock = match ? match[1].split("\n##")[0].trim() : null;
---
<div class="card">
  {serviceBlock ? (
    <article>
      <h3>Today’s Micro‑Challenge</h3>
      <div set:html={serviceBlock} />
    </article>
  ) : (
    <p>Micro‑challenge will appear here once your first reflection is generated.</p>
  )}
</div>
