---
const { title = "TriWeiAI", description = "Peace, reflection, and service powered by local AI." } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/src/styles/main.css" />
    <link rel="preload" href="/assets/logo_gold.png" as="image">
  </head>
  <body>
    <header class="nav">
      <a href="/" class="brand">TriWeiAI</a>
      <nav>
        <a href="#mission">Mission</a>
        <a href="#daily">Daily Reflections</a>
        <a href="#service">Service</a>
        <a href="#about">About</a>
        <a href="/archive">Archive</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="footer">
      <p>© {new Date().getFullYear()} TriWeiAI • Built with Astro • Local-first</p>
    </footer>
  </body>
</html>
