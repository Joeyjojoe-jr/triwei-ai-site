---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import Daily from "../components/DailyReflection.astro";
import Service from "../components/Service.astro";
import About from "../components/About.astro";
---
<Base title="TriWeiAI — Peace, Reflection, Service">
  <Hero />

  <Section id="mission" title="Mission" lead="Pull people away from frantic noise toward peace, love, and service.">
    <p>We distill the day’s readings into a short reflection, three questions for self‑examination, a brief prayer, and one concrete act of service. Outputs are grounded in trusted sources and reviewed before publishing.</p>
    <p><small class="dim">Technical: local RAG + small LLM. Sources live in <kbd>data/corpus/</kbd>. Approved posts in <kbd>app/runs/</kbd>.</small></p>
    <div slot="side">
      <img src="/assets/logo_blue_alt.png" alt="TriWeiAI motif">
    </div>
  </Section>

  <Section id="daily" title="Daily Reflections" lead="Latest entry from your local pipeline.">
    <Daily />
    <div slot="side">
      <img src="/assets/logo_gold_alt.png" alt="Golden emblem">
    </div>
  </Section>

  <Section id="service" title="Service & Community" lead="Live the Gospel in small acts.">
    <Service />
    <div slot="side">
      <img src="/assets/logo_wood.png" alt="Wood emblem">
    </div>
  </Section>

  <Section id="about" title="About" lead="Your story. Your why.">
    <About />
    <div slot="side">
      <img src="/assets/logo_glass.png" alt="Glass emblem">
    </div>
  </Section>
</Base>
