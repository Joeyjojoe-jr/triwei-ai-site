---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort((a, b) =>
  a.data.date < b.data.date ? 1 : -1
);
---
<BaseLayout title="TriWei AI â€” Digest">
  <section class="max-w-5xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-6">Latest digests</h1>
    <ul class="grid gap-4">
      {posts.map((post) => (
        <li class="p-4 rounded-xl border border-black/5 bg-white/60">
          <a href={`/posts/${post.slug}/`} class="block">
            <div class="text-lg font-semibold">{post.data.title}</div>
            <div class="text-sm opacity-70">{post.data.date}</div>
            {post.data.description && (
              <p class="mt-2 text-sm">{post.data.description}</p>
            )}
          </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
