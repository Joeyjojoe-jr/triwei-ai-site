---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getEntryBySlug } from 'astro:content';
const { slug } = Astro.params;
const entry = await getEntryBySlug('posts', slug!);
if (!entry) throw new Error('Post not found');
const { Content, data } = await entry.render();
---
<BaseLayout title={data.title} description={data.description}>
  <article class="prose max-w-3xl mx-auto px-4 py-8">
    <h1 class="mb-2">{data.title}</h1>
    <p class="opacity-70 text-sm">{data.date}</p>
    <Content />
  </article>
</BaseLayout>